<form action="<%= cats_url%>" method = "post">
  <label> Birthdate:
    <input type="text" name="cat[birth_date]" value="<%= @cat.birth_date %>">
  </label>
  <br />

  <label> Color:
    <input type="text" name="cat[color]" value="<%= @cat.color  %>">
  </label>
  <br />

  <label> Name:
    <input type="text" name="cat[name]" value="<%= @cat.name  %>">
  </label>
  <br />

  <label> Sex:
    <input type="radio" id="female" name="cat[sex]" value="F">
    <label for ="female">female</label>
    <input type="radio" id="male" name="cat[sex]" value="M">
    <label for ="male">male</label>
  </label>
  <br />

  <label> Description:
    <input type="text" name="cat[description]" value="<%= @cat.description %>">
  </label>
  <br />
  <div><%= @cat.errors.full_messages %></div>
  <input type="submit" value="Create Cat">
  </form>